# Environment Configuration
# Copy this file to .env and customize for your environment

# Environment type: local, development, test, production
ENVIRONMENT=local

# Test mode flag (overrides environment if set to true)
TEST_MODE=false

# Database Configuration
#-----------------------

# Database type: sqlite, mysql, postgresql
DB_TYPE=sqlite

# SQLite configuration (used when DB_TYPE=sqlite)
# Default: sqlite:///product_management.db (local file in project root)
# No additional configuration needed for SQLite

# MySQL configuration (used when DB_TYPE=mysql)
MYSQL_URI=mysql://user:password@localhost/product_management

# PostgreSQL configuration (used when DB_TYPE=postgresql)
POSTGRES_URI=postgresql://user:password@localhost/product_management

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# API Configuration
#-----------------
DEBUG=false

# Logging Configuration
#---------------------
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
